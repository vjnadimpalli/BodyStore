<div class="cart_title"><b>Your Bag</b></div>
<table>
  <%= render(@cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<table>
  <tr>
    <br/>
    
    <td><%= button_to 'Empty your Bag!', @cart, :method => :delete, :confirm => 'Are you sure?' %></td>
    
  </tr>
</table>
